<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    >
    <!--android:background="@drawable/login_background"-->

    <com.hjsmallfly.syllabus.customviews.WrapContentHeightViewPager
        android:id="@+id/bannerViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/input_area"
        tools:context=".MainActivity">



            <!--android:background="#46ffffff"-->
        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--android:background="@android:color/white"-->
            <LinearLayout

                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">


                <!--android:background="@drawable/text_shape"-->
                <EditText
                    android:id="@+id/username_edit"
                    android:hint="@string/username_hint"
                    android:singleLine="true"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/password_edit"

                    android:layout_weight="3"
                    android:hint="@string/password_hint"
                    android:singleLine="true"
                    android:layout_margin="1dp"
                    android:inputType="textPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <!--<Spinner-->
                    <!--android:gravity="center"-->
                    <!--android:id="@+id/semester_spinner"-->
                    <!--android:layout_weight="3"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"/>-->


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/login_button"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:visibility="gone"
                android:id="@+id/debug_ip_edit"
                android:text="@string/server_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--android:background="@drawable/button_shape2"-->
            <!--<Button-->
                <!--android:textSize="22sp"-->
                <!--android:background="@android:color/holo_blue_light"-->
                <!--android:id="@+id/query_syllabus_button"-->
                <!--android:textColor="#ffffff"-->
                <!--android:text="@string/query_syllabus_button"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_margin="@dimen/activity_horizontal_margin"

            android:orientation="vertical"
            android:id="@+id/function_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 各类功能按钮 -->

            <LinearLayout
                style="?android:buttonBarButtonStyle"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?android:buttonBarButtonStyle"
                    android:layout_margin="2dp"
                    android:text="@string/query_syllabus_button_string"
                    android:id="@+id/query_syllabus_button"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_weight="3"
                    android:background="@android:color/holo_blue_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    style="?android:buttonBarButtonStyle"
                    android:text="@string/login_wifi_button_string"
                    android:id="@+id/login_wifi_button"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:background="@android:color/holo_green_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                style="?android:buttonBarButtonStyle"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/query_oa_button"
                    style="?android:buttonBarButtonStyle"
                    android:text="@string/query_os_system_button_string"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_weight="2"
                    android:background="@android:color/holo_purple"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/school_activity_button"
                    style="?android:buttonBarButtonStyle"
                    android:text="@string/whatsup_in_school_button_string"
                    android:layout_margin="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_weight="3"
                    android:background="#E05295"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:baselineAligned="false"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_margin="2dp"
                    style="?android:attr/buttonStyle"
                    android:background="#d990dc"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/query_grade_text_view"
                        android:background="@null"
                        android:textColor="@android:color/white"
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/query_grade"
                        android:focusable="false"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/grade_button_string" />
                </FrameLayout>

                <!--<Button-->
                <!--android:text="考试安排"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="17sp"-->
                <!--android:layout_weight="2"-->

                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content" />-->


                <FrameLayout
                    android:layout_margin="2dp"
                    style="?android:attr/buttonStyle"
                    android:background="#ff0051"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <!--android:drawableLeft="@android:drawable/ic_menu_edit"-->
                    <TextView
                        android:id="@+id/query_exam_text_view"
                        android:textColor="@android:color/white"
                        android:background="@null"
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:clickable="true"
                        android:focusable="false"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="@string/exam_button_string" />
                </FrameLayout>

            </LinearLayout>

            <!-- 各类功能按钮 -->
        </LinearLayout>


    </ScrollView>

    <TextView
        android:visibility="gone"
        android:textSize="15sp"
        android:id="@+id/help_message_view"
        android:layout_above="@+id/year_semester_selection"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:text="@string/help_message"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/year_semester_selection"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:gravity="center"
            android:id="@+id/year_spinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Spinner
            android:gravity="center"
            android:id="@+id/semester_spinner"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>
