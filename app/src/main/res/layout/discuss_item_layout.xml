<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/discuss_avatar_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/syllabus_icon2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discuss_speaker_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daidaijie"
            android:textColor="#576B95"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/discuss_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="dansui"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <GridView
            android:layout_marginTop="10dp"
            android:id="@+id/discuss_grid_image_view"
            android:numColumns="3"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </GridView>

        <TextView
            android:id="@+id/discuss_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2013ç‚¹"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/like_image_view"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/liked" />

                <TextView
                    android:id="@+id/like_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />

            </LinearLayout>



            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/comment_image_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/comment_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
