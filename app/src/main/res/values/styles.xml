<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         <!--Customize your theme here. -->
        <item name="colorPrimary">#BE4C3C</item>
        <item name="colorPrimaryDark">#b43827</item>
        <item name="android:actionBarSize">45dp</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>1
        <!-- item背景色 红色-->
        <item name="android:itemBackground">@drawable/menu_item_bg</item>
    </style>



    <style name="ClassDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!---->

</resources>
